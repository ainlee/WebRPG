{
  "name": "webrpg",
  "version": "1.0.0",
  "type": "module",
  "main": "scripts/core.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' vitest",
    "test:calibration": "NODE_OPTIONS='--experimental-vm-modules' vitest scripts/calibration*.test.js",
    "test:particles": "NODE_OPTIONS='--experimental-vm-modules' vitest scripts/particleSystem.test.js",
    "test:position": "NODE_OPTIONS='--experimental-vm-modules' vitest scripts/positionCalibration.test.js",
    "build": "webpack --config webpack.config.js --node-env=production",
    "preview": "serve dist -p 5501",
    "docs": "typedoc --out docs/api scripts/*.js --plugin typedoc-plugin-markdown",
    "lint": "eslint scripts/**/*.js",
    "dev": "vite --port=5500"
  },
  "keywords": [
    "game",
    "rpg",
    "web"
  ],
  "author": "艾因",
  "license": "ISC",
  "description": "Web-based RPG game engine",
  "dependencies": {
    "craftyjs": "^0.9.0",
    "howler": "^2.2.4",
    "phaser": "^3.80.1",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/browser": "^3.2.1",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.2.1",
    "@webassemblyjs/wasm-opt": "^1.14.1",
    "babel-loader": "^9.1.3",
    "eslint": "8.57.1",
    "eslint-plugin-import": "^2.29.0",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "vitest": "^3.1.4",
    "webpack": "5.99.9",
    "webpack-cli": "^5.1.4"
  }
}
